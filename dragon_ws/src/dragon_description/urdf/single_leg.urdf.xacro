<?xml version="1.0"?>
<robot name="single_leg" xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <!-- common stuff -->
  <xacro:include filename="$(find dragon_description)/urdf/common.gazebo.xacro" />

  <!-- single leg XACRO -->
  <xacro:include filename="$(find dragon_description)/urdf/leg.urdf.xacro" />

  <!--xacro:link_template name="base_link">
    <sphere radius="0.0001"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.0001"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0"/>
    </inertial>
  </xacro:link_template-->

  <link name="world" />

  <joint name="y_axis_joint" type="fixed">
    <parent link="world" />
    <child link="framework" />
    <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0" />
  </joint>

  <xacro:link_stl_template name="framework" stl="main1n">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </xacro:link_stl_template>

  <!--xacro:link_template name="y_axis">
    <box size="0.01 0.02 5"/>
    <origin xyz="0 -0.04 0" rpy="0 ${pi/2} 0" />
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0"/>
    </inertial>
  </xacro:link_template-->

  <joint name="z_axis_joint" type="prismatic">
    <parent link="framework" />
    <child link="z_axis" />
    <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0" />
    <limit lower="-0.9" upper="0.9" effort="${effort}" velocity="${velocity}"/>
    <axis xyz="1 0 0" />
  </joint>

  <xacro:link_stl_template name="z_axis" stl="main2n">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.0001" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </xacro:link_stl_template>

  <!--xacro:link_template name="z_axis">
    <box size="0.01 0.02 3"/>
    <origin xyz="0.1 -0.03 1.2" rpy="0 0 ${pi/2}" />
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.0001"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0" iyz="0.0" izz="0"/>
    </inertial>
  </xacro:link_template-->

  <joint name="axis_to_base_joint" type="prismatic">
    <parent link="z_axis" />
    <child link="leg_base" />
    <origin xyz="0 0.06 0.5" rpy="0.0 0.0 0.0" />
    <limit lower="-0.45" upper="0.4" effort="${effort}" velocity="${velocity}"/>
    <axis xyz="0 0 1" />
  </joint>

  <!-- Only support obtain the joint state, The joint conn't be handled! -->
  <transmission name="z_axis_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="z_axis_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="z_axis_joint_motor">
      <mechanicalReduction>0</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- Only support obtain the joint state, The joint conn't be handled! -->
  <transmission name="axis_to_base_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="axis_to_base_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="axis_to_base_joint_motor">
      <mechanicalReduction>0</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- single leg -->
  <xacro:leg prefix="" />


</robot>
